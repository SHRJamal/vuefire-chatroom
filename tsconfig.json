{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/@types/*"]
    },

  },

  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["dist", "node_modules", ".git"]
}
